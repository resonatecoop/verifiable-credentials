      h1()= "You qualify for the community credentials beta program!"
      p()= "Thanks for being a supporter of community-driven independent music. Please follow these steps to participate."
      div(class="steps")
        div(class="step app")
          h2()= '1. Download the "VC Wallet" App on your phone'
          div(class="step-content")
            p()= 'Make sure it is made by "Verifiable Credentials Ltd".'
            div(class="app-links")
              div(class="vc-ltd-app")
                img(alt="VC Wallet", src="/images/vc-wallet.png")
              div(class="stores")
                div(class="ios")
                  a(href="https://apps.apple.com/us/app/vc-wallet/id1529011137?itsct=apps_box_badge&amp;itscg=30200")
                    img(alt="Download on the App Store", src="/images/ios-app-store.svg")
                div(class="android")
                  a(href="https://play.google.com/store/apps/details?id=org.verifiablecredentials.vcholder&hl=en&gl=US&pcampaignid=pcampaignidMKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1")
                    img(alt='Get it on Google Play', src='/images/google-play-badge.png')
        div(class="step qr-code")
          h2()= '2. Open the VC Wallet App and tap "Scan QR Code"'
          div(class="step-content")
            p()= "Then scan this QR Code."
            canvas(id="qr-canvas")
        div(class="step discourse")
          h2()= '3. Use your credentials on our Community'
          div(class="step-content")
            p()= "Open this link on your phone, then click 'Get Access'."
            div(class="reaonte-community")
              a(href="https://commmunity.resonate.is")
                img(src="/images/community_logo.png")
