extends layout

block content
  header(style="position:fixed;top:0;left:0;width:100vw;height:100px;border-bottom:1px solid #333;display:flex;align-items:center;justify-content:space-between;padding:0 2em;box-sizing:border-box;")
    img(src='images/resonate.png', alt='Resonate', style='height:99px;')
    img(src='images/angus.png', alt="Angus", style="border-radius:50%;width:50px;height:50px;")
  h1(style="padding-top:80px;")= 'Purchase Complete!'
  div(style="display: flex; flex-direction: column; width: 600px;")
    h2(style="font-weight: 400")= "You now own \"Get a Grip - Radio Edit\" by Feral Five. Also, we've issued you Supporter Credentials for Feral Five."
    div(style="display: inline-flex; align-items: center; padding: 10px; background-color: #e8e7e7; width: fit-content;")
      img(src='images/passport.png', style='width:20px; margin-right: 10px;')
      span()= 'Feral Five Supporter Credentials have been issued to "Angus\'s Wallet".'
    button(name="stream", style="padding:6px 12px; border:1px solid #333; font-size: 1.5em; margin-top: 2em; background-color: black; color: white; width: fit-content;")= "Play Track"
